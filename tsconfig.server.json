{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "outDir": "dist/server",
        "rootDir": ".",
        "resolveJsonModule": true,
        "declaration": false,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@server/*": [
                "src/server/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        }
    },
    "include": [
        "src/server/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}